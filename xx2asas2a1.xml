<UserPref name="FontType" display_name="Text-Font type:" default_value="ARIAL" datatype="string"/>
<UserPref name="FontKleur" display_name="Text-Text color:" default_value="grey" datatype="enum" >
    <EnumValue value="Grey" />
    <EnumValue value="Green" />
    <EnumValue value="Lightblue" />
    <EnumValue value="Yellow" />
    <EnumValue value="Red" />

        }
        
        var sites = [
        {key:name0, value:address0},
        {key:name1, value:address1},
        {key:name2, value:address2},
        {"cdsvs", value:address3},
        {key:name4, value:address4},
        ];


        function add(){
            var element = document.getElementsByTagName("text"); 
            var elementsA = document.getElementsByTagName("a");
            var index = 0;
            for(var key in sites){
                var x = element[index].getAttribute('x');
                x = parseInt(x);
                if(key.length < 8)
                    x+= 20;
                else if(key.length > 9)
                    x-= 20;
                x += 90 - (key.length);
                element[index].setAttribute('x',x);
                elementsA[index].setAttribute('href',sites[key]);
                element[index++].innerHTML = key;
            }
        }
        window.onload = function(){
            main();
            add();
            

        }

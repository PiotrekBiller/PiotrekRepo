<Module>
<UserPref name="titelGadget" display_name="Title" required="true" default_value="Gadget" datatype="string"/>
<UserPref name="xmlURL" display_name="Xml-file (url)." required="true" default_value="https://sites.google.com/site/piotrekggsite/data.xml" datatype="string"/>
<!-- Edit title -->
<UserPref name="FontTypeTitel" display_name="Title-Font type:" default_value="ARIAL" datatype="string"/>
<UserPref name="myname" display_name="Name" required="true" />


<Content type="html">
<![CDATA[

<div id="content_div"></div>
   <script type="text/javascript">
   var prefs = new gadgets.Prefs();

   function displayGreeting () {
     var html = "";

     var element = document.getElementById('content_div');
     

     html += "prefs.getString("myname") + "!!!<br><br></FONT>";

     element.innerHTML = html;
   }
   
   gadgets.util.registerOnLoadHandler(displayGreeting);

   </script>

]]>
</Content>
</Module>

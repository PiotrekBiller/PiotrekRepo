    <Content type="html">
     <![CDATA[ 
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Top Menu</title>
    <style type="text/css">
            .nav {
            list-style: none;
            padding: 0;
            margin: 0px 0;
            width: 100%;
            padding-left: 50px;
        }

        .nav>li {
            float: left;
            margin-right: 10px;
        }

        .nav {
            display: flex;
            justify-content: left;
            background-color: #F2F2F2;
        }

        .nav a {
            display: block;
            padding: 15px 25px 0px 25px;
            color: #999999!important;
            font-family: 'Arial', sans-serif!important;
            font-size: 16px!important;
            text-decoration: none;
            font-weight: bold;
        }

        #triangle {
            width: 0;
            height: 0;
            border-left: 6px solid transparent;
            border-right: 6px solid transparent;
            border-bottom: 11px solid #F2F2F2;
            margin: 7px auto 0;
        }

        .nav a:hover {
            color: #0066cc!important;
            text-decoration: none;
            background-color: transparent;
        }

        .nav a.active {
            color: #0066cc!important;
        }

        .nav a.active #triangle {
            color: #0066cc!important;
            border-left: 6px solid transparent;
            border-right: 6px solid transparent;
            border-bottom: 11px solid #0066cc;
        }
    </style>
</head>

<body>
    <ul class="nav">
        <li>
            <a target="_top" href="https://sites.google.com/a/contractors.roche.com/sap-seminars/">
                <div>About</div>
                <div>
                    <div id="triangle"></div>
                </div>
            </a>
        </li>
        <li>
            <a href="https://sites.google.com/a/contractors.roche.com/sap-seminars/upcoming-sessions">
                <div>Upcoming Sessions</div>
                <div>
                    <div id="triangle"></div>
                </div>
            </a>
        </li>
        <li>
            <a href="https://sites.google.com/a/contractors.roche.com/sap-seminars/past-sessions">
                <div>Past Sessions</div>
                <div>
                    <div id="triangle"></div>
                </div>
            </a>
        </li>
    </ul>
    <script>
        function testUrls() {
            //console.log(window.location);
            //console.log(window.parent.location);
            //console.log(document.referrer);
            if (/devtoolstest/.test(document.referrer)) {
                document.body.innerHTML = document.body.innerHTML.replace(/dev-tools/g, 'devtoolstest');
            }

            var url = (window.location != window.parent.location)
                ? document.referrer
                : document.location.href;
            for (var i = 0; i < document.links.length; i++) {
                if (document.links[i].href == url) {
                    document.links[i].className = 'active';
                }
            }
        }
        window.onload = testUrls;
    </script>
</body>

</html>
